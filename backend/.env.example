# Example environment file for the Django backend (copy to .env and fill values)

# Django
DEBUG=true
SECRET_KEY=change-me
ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_LOG_LEVEL=INFO

# Database
# For Supabase Postgres:
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME
DATABASE_URL=

# CORS (used when DEBUG=false)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# External PBL platform integration
SSO_MODE=mock
PBL_API_URL=
PBL_API_KEY=

# Dev login (development-only endpoint: /api/dev/sso-login/)
# Keep this OFF unless you intentionally use dev login.
ALLOW_DEV_LOGIN=0
# Optional: require a shared secret in the dev login request body.
DEV_LOGIN_SECRET=

# Frontend URLs (used for redirects/callbacks as needed)
STUDENT_FRONTEND_URL=http://localhost:5173
FACULTY_FRONTEND_URL=http://localhost:5174

# Business rules
CANCELLATION_WINDOW_HOURS=24
